--- a/Makefile.proto
+++ b/Makefile.proto
@@ -30,9 +30,9 @@
 ##
 # If using OpenSSL, uncomment the following 3 lines.
 ##
-#CRYPTO_CFLAGS =
-#CRYPTO_OBJS   = secure_random_openssl.o
-#CRYPTO_LIBS   = -lcrypto
+CRYPTO_CFLAGS =
+CRYPTO_OBJS   = secure_random_openssl.o
+CRYPTO_LIBS   = -lcrypto
 
 ##
